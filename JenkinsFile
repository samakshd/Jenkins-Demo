pipeline { 
agent any
    stages {
        stage('Clone Git Repository') {
            steps {
                git 'https://github.com/samakshd/Jenkins-Demo.git'
            }
        }
        stage('Run Code') {
            steps {
                sh "/usr/bin/python3 main.py"
            }
        }
     stage('Test Code') {
            steps {
                sh "/usr/bin/python3 test.py"
            }
        }
    }
    post {
        always {
            emailext body: 'A Test EMail',
            subject: 'Test',
            to: 'samaksh.dhingra@iiitb.ac.in'
        }
    }
}
